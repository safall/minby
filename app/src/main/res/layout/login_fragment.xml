<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/yellow"
        android:elevation="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:gravity="center"
            android:text="@string/minby"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="78dp"
            android:gravity="center"
            android:text="@string/logg_in"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/har_du_ikke"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/register_d"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/facebookButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/button_bg_facebook"
            android:drawableStart="@drawable/com_facebook_button_icon"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/continue_with_facebook"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/googleButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="48dp"
            android:background="@color/light_white"
            android:drawableStart="@drawable/common_google_signin_btn_icon_dark"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/continue_with_google"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="58dp"
        android:paddingEnd="58dp">

        <EditText
            android:id="@+id/mailId"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="75dp"
            android:autofillHints="@string/mailaddress"
            android:background="@drawable/edittext_background"
            android:hint="@string/mailaddress"
            android:inputType="textEmailAddress"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:textColor="@color/black"
            android:textColorHint="@color/light_darg"
            tools:targetApi="o"
            tools:text="Mail Address" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:autofillHints="@string/Password"
            android:background="@drawable/edittext_background"
            android:hint="@string/Password"
            android:inputType="textWebPassword"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:textColor="@color/black"
            android:textColorHint="@color/light_darg"
            tools:targetApi="o"
            tools:text="Passord" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:alpha="0.5"
            android:background="@drawable/login_button_background"
            android:text="@string/logg_in"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>


