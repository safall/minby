<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="406dp"
        android:elevation="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:gravity="center"
            android:text="@string/minby"
            android:textStyle="bold"
            android:textAppearance="@style/minby"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:text="@string/logg_in"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:text="@string/har_du_ikke" />
        <TextView
            android:id="@+id/registerLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:text="@string/register_d" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="406dp"
        android:orientation="vertical"
        android:paddingStart="58dp"
        android:paddingEnd="58dp"
        android:background="@color/grey">

        <EditText
            android:id="@+id/mailId"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="75dp"
            android:autofillHints="@string/mailaddress"
            android:hint="@string/mailaddress"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:background="@drawable/edittext_background"
            tools:text="Mail Address"
            android:textColorHint="@color/light_darg"
            tools:targetApi="o" />
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:autofillHints="@string/Password"
            android:hint="@string/Password"
            tools:text="Passord"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:inputType="textWebPassword"
            android:background="@drawable/edittext_background"
            android:textColor="@color/black"
            android:textColorHint="@color/light_darg"
            tools:targetApi="o" />

        <Button
            android:id="@+id/loginId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:alpha="0.5"
            android:background="@drawable/login_button_background"
            android:textColor="@color/white"
            android:onClick="Login"
            android:text="@string/logg_in" />
    </LinearLayout>

</LinearLayout>


