<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="406dp"
        android:background="@color/yellow"
        android:elevation="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="84dp"
            android:layout_height="31dp"
            android:layout_alignmentLeft="true"
            android:layout_alignmentTop="true"
            android:layout_marginStart="153dp"
            android:layout_marginTop="49dp"
            android:gravity="top"
            android:lineSpacingExtra="0dp"
            android:text="@string/minby"
            android:textAppearance="@style/minby"
            android:textSize="25sp" />

        <TextView
            android:layout_width="234dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="91dp"
            android:layout_marginTop="164dp"
            android:text="@string/logg_in"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="151dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="124dp"
            android:layout_marginTop="224dp"
            android:gravity="center_horizontal"
            android:text="@string/har_du_ikke" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="406dp"
        android:layout_alignmentLeft="true"
        android:layout_alignmentTop="true"
        android:layout_marginTop="406dp"
        android:background="@color/light_white">

        <EditText
            android:id="@+id/mail_id"
            android:layout_width="259dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignmentTop="true"
            android:layout_marginStart="58dp"
            android:layout_marginTop="51dp"
            android:autofillHints="@string/mailaddress"
            android:hint="@string/mailaddress"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/light_darg"
            tools:targetApi="o" />
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="259dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignmentTop="true"
            android:layout_marginStart="58dp"
            android:layout_marginTop="108dp"
            android:autofillHints="@string/Password"
            android:hint="@string/Password"
            android:inputType="textWebPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/light_darg"
            tools:targetApi="o" />

        <Button
            android:id="@+id/login_id"
            android:layout_width="259dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="58dp"
            android:layout_marginTop="191dp"
            android:alpha="0.5"
            android:background="@color/green"
            android:onClick="Login"
            android:text="@string/logg_in" />
    </RelativeLayout>

</RelativeLayout>


