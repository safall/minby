<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:elevation="4dp"
        android:background="@color/yellow"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:gravity="center"
            android:lineSpacingExtra="0dp"
            android:text="@string/minby"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="123dp"
            android:gravity="center"
            android:text="@string/register_d"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/eksisterend" />


        <TextView
            android:id="@+id/facebookButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/button_bg_facebook"
            android:drawableStart="@drawable/com_facebook_button_icon"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/continue_with_facebook"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/loginIdLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/loginLink" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingStart="58dp"
        android:paddingEnd="58dp">

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="75dp"
            android:autofillHints="@string/Password"
            android:background="@drawable/edittext_background"
            android:hint="@string/Password"
            android:inputType="textWebPassword"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:textColor="@color/black"
            android:textColorHint="@color/light_darg"
            tools:targetApi="o"
            tools:text="Password" />

        <EditText
            android:id="@+id/rePasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:autofillHints="@string/Bekreftpassword"
            android:background="@drawable/edittext_background"
            android:hint="@string/Bekreftpassword"
            android:inputType="textWebPassword"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:textColor="@color/black"
            android:textColorHint="@color/light_darg"
            tools:targetApi="o"
            tools:text="Bekreft passord" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="36dp"
            android:alpha="0.5"
            android:background="@drawable/login_button_background"
            android:text="@string/Registrerdeg" />
    </LinearLayout>
</LinearLayout>