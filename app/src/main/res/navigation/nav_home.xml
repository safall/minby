<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.afi.minby.home.HomeFragment"
        tools:layout="@layout/home_fragment">

        <action
            android:id="@+id/homeFragmentToMessageFragment"
            app:destination="@id/issueFragment" />
    </fragment>

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.afi.minby.categories.CategoriesFragment"
        tools:layout="@layout/categories_fragment" />

    <fragment
        android:id="@+id/issueFragment"
        android:name="com.afi.minby.message.MessageFragment"
        tools:layout="@layout/message_fragment" />
</navigation>