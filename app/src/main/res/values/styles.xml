<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Header" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Title" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubTitle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/form_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/form_text_color</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_height">48dp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/standard_button_background</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BorderedButtonStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_height">48dp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">14dp</item>
        <item name="android:background">@drawable/bg_social_login</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CategoryButtonStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="elevation">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/background_category_item</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColorHint">@color/form_text_color</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/form_text_color</item>
    </style>

    <style name="DescEditTextStyle" parent="@android:style/TextAppearance">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:background">@drawable/desc_edit_text_background</item>
        <item name="android:textColorHint">@color/form_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/form_text_color</item>
    </style>
</resources>
